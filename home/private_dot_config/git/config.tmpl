# vim: ft=gitconfig
[user]
  name = {{ .name }}
  email = {{ .email }}
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIEAW4osmMLIah4cR3CvOBdGu61olG+Czfs+2zRLximVU {{ .email }}
[init]
  templatedir = ~/.config/git/template
  defaultBranch = main
[push]
  default = current
[color]
  branch = auto
  status = auto
  ui = auto
[color "branch"]
  current = yellow black
  local = yellow
  remote = magenta bold
[color "status"]
  added = magenta yellow
  updated =  green bold
  changed = red bold
  untracked = cyan reverse
  branch = white bold red
  nobranch = red white bold
[alias]
  aa = add --all
  ap = add --patch
  br = branch --format='%(color:bold yellow)%(HEAD)%(color:reset) %(align:40)%(color:yellow)%(refname:short)%(color:reset)%(end) %(align:20)%(color:green)(%(committerdate:relative))%(color:reset)%(end) %(align:25)%(color:bold blue)<%(authorname)>%(color:reset)%(end) %(contents:subject)' --sort=-committerdate
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci = commit -v
  cm = commit -m
  co = checkout
  ds = diff --staged
  fr = "!f() { git fetch && git rebase origin/"$1"; }; f"
  last = log -1 HEAD --stat
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ll = log --oneline
  ps = push
  pl = pull
  sb = status -s -b
  st = status
  tag-release = "!f() { tag=v${1:-$(cat VERSION)} ; git tag -s ${tag} -m ${tag} && git push origin ${tag}; }; f"
[core]
  excludesfile = ~/.config/git/ignore
  autocrlf = input
  editor = nvim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[gitflow "prefix"]
  feature = feature-
  release = release-
  hotfix = hotfix-
  support = support-
  versiontag = v
[diff]
  compactionHeuristic = true
  colorMoved = default
[commit]
  template = ~/.gitmessage
  gpgsign = true
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[github]
  user = yvigara
[gitreview]
  username = yvigara
[interactive]
  diffFilter = delta --color-only
[filter "strongbox"]
  clean = strongbox -clean %f
  smudge = strongbox -smudge %f
  required = true
[diff "strongbox"]
  textconv = strongbox -diff
[diff "sopsdiffer"]
  textconv = "sops -d"
[pull]
  ff = only
[delta]
  features = decorations
  syntax-theme = gruvbox-dark
  whitespace-error-style = 22 reverse
  plus-style = syntax "#3A3B0C"
  minus-style = syntax "#7A231A"
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
  hunk-header-decoration-style = blue box ul
[merge]
  conflictstyle = diff3
[url "git@github.com:"]
  insteadOf = https://github.com/
{{if (eq .chezmoi.os "darwin") -}}
[credential]
  helper = osxkeychain
{{ end -}}
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers
