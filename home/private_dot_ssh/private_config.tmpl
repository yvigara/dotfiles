HashKnownHosts no

Host *
  IgnoreUnknown UseKeychain
  Compression yes
  ForwardAgent yes
  ForwardX11 no
  TCPKeepAlive yes
  ServerAliveInterval 15
{{- if eq .chezmoi.os "darwin" }}
  AddKeysToAgent yes
  UseKeychain yes
{{- end }}

Host github.com
  IgnoreUnknown UseKeychain
  User git
{{- if eq .chezmoi.os "darwin" }}
  AddKeysToAgent yes
  UseKeychain yes
{{- end }}
  IdentityFile ~/.ssh/id_ed25519.github
